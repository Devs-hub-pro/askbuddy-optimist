
<!-- Search Bar Component -->
<view class="px-4 py-3 bg-app-light-bg animate-fade-in mb-3">
  <view class="flex items-center space-x-2 mb-3">
    <image src="/assets/icons/users.png" style="width: 22px; height: 22px;" />
    <text class="text-xl font-bold text-gray-800">找人问问</text>
    <text class="text-gray-600 text-sm">AI无法回答的，就找人问问！</text>
  </view>
  
  <view class="{{isFocused ? 'ring-2 ring-app-teal/30 rounded-md' : ''}} relative">
    <input
      type="text"
      placeholder="搜索问题/达人/话题"
      class="search-input w-full px-4 py-2 pr-10 rounded-md shadow-sm"
      bindinput="onSearchInput"
      bindfocus="onFocus"
      bindblur="onBlur"
    />
    <image 
      src="/assets/icons/search.png" 
      style="width: 18px; height: 18px; position: absolute; right: 16px; top: 50%; transform: translateY(-50%);" 
    />
  </view>
</view>
