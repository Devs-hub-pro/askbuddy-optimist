
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, "PingFang SC", "Helvetica Neue", STHeiti, "Microsoft Yahei", Tahoma, Simsun, sans-serif;
}

.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

/* Header */
.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12px 16px;
  background-color: #fff;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
}

.back-btn {
  padding: 8px;
  margin: -8px;
  display: flex;
  align-items: center;
}

.title {
  font-size: 16px;
  font-weight: 500;
}

/* Search Bar */
.search-container {
  display: flex;
  align-items: center;
  padding: 10px 16px;
  background-color: #fff;
  margin-top: 44px;
}

.search-box {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #f2f2f2;
  border-radius: 8px;
  padding: 8px 12px;
}

.search-box image {
  margin-right: 8px;
  opacity: 0.4;
}

.search-box input {
  flex: 1;
  height: 20px;
  font-size: 14px;
}

.cancel-btn {
  padding: 0 10px;
  font-size: 14px;
  color: #333;
}

/* Current Location */
.current-location {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12px 16px;
  background-color: #fff;
  margin-bottom: 8px;
}

.location-label {
  font-size: 15px;
  color: #333;
}

.relocate-btn {
  display: flex;
  align-items: center;
  color: #ff6e4a;
  font-size: 13px;
}

/* Section Styles */
.section {
  background-color: #fff;
  padding: 10px 16px;
  margin-bottom: 8px;
}

.section-title {
  font-size: 13px;
  color: #999;
  margin-bottom: 10px;
}

.city-grid {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -5px;
}

.city-item {
  width: calc(33.33% - 10px);
  margin: 0 5px 10px;
  height: 36px;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
  border-radius: 4px;
  font-size: 14px;
}

.city-list {
  border-top: 0.5px solid #eee;
}

.city-list-item {
  padding: 12px 0;
  font-size: 14px;
  border-bottom: 0.5px solid #eee;
}

.no-results {
  padding: 30px 0;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
}

/* City Index */
.city-container {
  display: flex;
  position: relative;
  height: calc(100vh - 220px);
}

.city-scroll {
  flex: 1;
  background-color: #fff;
}

.index-letter {
  padding: 8px 16px;
  font-size: 14px;
  color: #666;
  background-color: #f5f5f5;
  position: sticky;
  top: 0;
  z-index: 1;
}

.index-bar {
  position: fixed;
  right: 5px;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  flex-direction: column;
  padding: 10px 5px;
  background-color: rgba(255, 255, 255, 0.6);
  border-radius: 15px;
  z-index: 10;
}

.index-item {
  padding: 2px 0;
  font-size: 12px;
  color: #666;
  text-align: center;
}
