
.dialog-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
}

.dialog-content {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1001;
  max-height: 80vh;
  overflow-y: auto;
}

.hidden {
  display: none;
}

.block {
  display: block;
}
