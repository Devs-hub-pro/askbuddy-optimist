
<!-- index.wxml -->
<view class="container">
  <!-- Navbar -->
  <view class="sticky top-0 z-50 bg-app-teal animate-fade-in">
    <view class="flex items-center justify-end h-12 px-4">
      <location-selector 
        location="{{location}}" 
        cities="{{cities}}" 
        locationMenuOpen="{{locationMenuOpen}}"
        recentCities="{{recentCities}}"
        bind:toggle="toggleLocationMenu"
        bind:select="selectLocation"
        bind:showSelector="showCitySelector"
      />
    </view>
  </view>
  
  <!-- Search Bar -->
  <search-bar 
    bind:search="onSearch" 
    bind:focus="onSearchFocus"
    bind:blur="onSearchBlur"
  />
  
  <!-- Category Section -->
  <category-grid categories="{{categories}}" bind:select="onCategorySelect" />
  
  <!-- Activities Section -->
  <activity-cards activities="{{activities}}" bind:select="onActivitySelect" />
  
  <!-- Questions Section -->
  <question-tabs 
    activeTab="{{activeTab}}" 
    isLoading="{{isLoading}}" 
    questions="{{activeTab === 'topics' ? questions : experts}}"
    bind:tabchange="switchTab"
    bind:answer="handleAnswer"
    bind:questionclick="handleQuestionClick"
    bind:expertclick="handleExpertClick"
  />
</view>
