}

/* Question card styles */
.question-card {
  border-radius: 12px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
  overflow: hidden;
  transition: transform 0.2s;
}

.question-card:active {
  transform: scale(0.98);
}

.ml-13 {
