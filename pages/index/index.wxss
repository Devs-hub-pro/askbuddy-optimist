.tag-green {
  display: inline-block;
  font-size: 12px;
  padding: 2px 8px;
  border-radius: 12px;
  background-color: rgba(16, 185, 129, 0.1);
  color: #10B981;
}

.answer-btn {
  background-color: #4FD1C5;
  color: white;
  font-size: 14px;
  padding: 6px 16px;
  border-radius: 20px;
  font-weight: 500;
}

/* Topic specific styles */
.topic-icon-bg {
  width: 32px;
  height: 32px;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.topic-tag {
  display: inline-block;
  font-size: 12px;
  padding: 2px 8px;
  border-radius: 12px;
  background-color: #EFF6FF;
  color: #3B82F6;
}

.topic-stat {
  background-color: #F9FAFB;
  padding: 2px 8px;
  border-radius: 12px;
}

.topic-reward-icon {
  width: 24px;
  height: 24px;
  background-color: #FEF3C7;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.topic-actions {
  display: flex;
  justify-content: space-between;
  border-top: 1px solid #F3F4F6;
  padding-top: 12px;
  margin-top: 8px;
}

.topic-action-btn {
  display: flex;
  align-items: center;
  padding: 6px 12px;
  border-radius: 16px;
  background-color: #F9FAFB;
  font-size: 12px;
  color: #6B7280;
}
