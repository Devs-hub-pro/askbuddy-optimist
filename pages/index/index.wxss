.grid {
  display: flex;
  flex-wrap: wrap;
}

.grid-cols-2 {
  width: 100%;
}

.grid-cols-2 > view {
  width: calc(50% - 8px);
  margin-bottom: 16px;
}

.grid-cols-2 > view:nth-child(odd) {
  margin-right: 8px;
}

.grid-cols-2 > view:nth-child(even) {
  margin-left: 8px;
}

.grid-cols-4 {
  justify-content: space-between;
