.flex {
  display: flex;
}

.items-center {
  align-items: center;
}

.justify-center {
  justify-content: center;
}

.justify-between {
  justify-content: space-between;
}

.px-4 {
  padding-left: 16px;
  padding-right: 16px;
}

.py-3 {
  padding-top: 12px;
  padding-bottom: 12px;
}

.space-x-4 > view:not(:first-child) {
  margin-left: 16px;
}

.space-x-6 > view:not(:first-child) {
  margin-left: 24px;
}

.bg-app-teal {
  background-color: #12B7B0;
}

.shadow-sm {
  box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
}

.text-white {
  color: white;
}

.font-medium {
  font-weight: 500;
}

.text-base {
  font-size: 16px;
}

/* Header & Navigation */
.header-nav {
  position: sticky;
  top: 0;
  z-index: 10;
}

.tab-container {
  display: flex;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.15);
  border-radius: 20px;
  padding: 2px;
}

.tab-item {
  padding: 6px 12px;
  border-radius: 18px;
  font-size: 14px;
  color: rgba(255, 255, 255, 0.8);
  transition: all 0.3s;
}

.tab-item.active {
  background-color: #fff;
  color: #12B7B0;
  font-weight: 500;
}

.search-icon, .settings-icon {
  width: 24px;
  height: 24px;
  display: flex;
  align-items: center;
  justify-content: center;
}

