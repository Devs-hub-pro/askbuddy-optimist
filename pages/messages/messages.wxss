/* Search Container */
.search-container {
  height: 0;
  overflow: hidden;
  transition: height 0.3s ease;
  background-color: white;
}

.search-container.active {
  height: 48px;
  padding: 8px 16px;
  border-bottom: 1px solid #f0f0f0;
}

.search-input {
  width: 100%;
  height: 32px;
  border-radius: 16px;
  background-color: #f5f5f5;
  padding: 0 12px;
  font-size: 14px;
}

/* Message Content */
.message-content, .notification-content {
  padding-bottom: 64px; /* Space for bottom navigation */
}

.section-title {
  padding: 12px 16px 4px;
  font-size: 12px;
  color: #999;
}

/* Conversation List */
.conversation-list {
  background-color: white;
}

.conversation-item {
  display: flex;
  padding: 12px 16px;
  position: relative;
  border-bottom: 1px solid #f0f0f0;
  transition: transform 0.3s;
  background-color: white;
  overflow: hidden;
}

.conversation-item.unread {
  background-color: rgba(18, 183, 176, 0.05);
}

.conversation-item.pinned {
  background-color: #f9f9f9;
}

.avatar-container {
  position: relative;
  margin-right: 12px;
}

.avatar {
  width: 48px;
  height: 48px;
  border-radius: 24px;
  background-color: #f0f0f0;
}

.badge {
  position: absolute;
  top: -4px;
  right: -4px;
  min-width: 16px;
  height: 16px;
  border-radius: 8px;
  background-color: #ff4d4f;
  color: white;
  font-size: 10px;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 4px;
}

.conversation-details {
  flex: 1;
  overflow: hidden;
}

.name-time {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 4px;
}

.name {
  font-size: 15px;
  font-weight: 500;
  color: #333;
}

.time {
  font-size: 12px;
  color: #999;
}

.preview {
  font-size: 13px;
  color: #666;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.preview.unread {
  color: #333;
  font-weight: 500;
}

/* Swipe Actions */
.swipe-actions {
  position: absolute;
  top: 0;
  right: -180rpx;
  height: 100%;
  display: flex;
}

.archive-action, .delete-action {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 90rpx;
  height: 100%;
  color: white;
  font-size: 13px;
}

.archive-action {
  background-color: #8c8c8c;
}

.delete-action {
  background-color: #ff4d4f;
}

/* Notification List */
.category-tabs {
  display: flex;
  padding: 12px 16px;
  border-bottom: 1px solid #f0f0f0;
  background-color: white;
  overflow-x: auto;
}

.category-tab {
  padding: 6px 12px;
  margin-right: 8px;
  font-size: 13px;
  color: #666;
  border-radius: 16px;
  background-color: #f5f5f5;
  white-space: nowrap;
}

.category-tab.active {
  background-color: #12B7B0;
  color: white;
}

.notification-list {
  background-color: white;
}

.notification-item {
  display: flex;
  padding: 12px 16px;
  border-bottom: 1px solid #f0f0f0;
}

.notification-item.unread {
  background-color: rgba(18, 183, 176, 0.05);
}

.notification-icon {
  width: 40px;
  height: 40px;
  border-radius: 20px;
  margin-right: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.notification-icon.transaction {
  background-color: #ffd666;
}

.notification-icon.activity {
  background-color: #b7eb8f;
}

.notification-icon.interaction {
  background-color: #91caff;
}

.notification-icon.system {
  background-color: #d3adf7;
}

.notification-details {
  flex: 1;
}

.notification-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 4px;
}

.notification-title text {
  font-size: 15px;
  font-weight: 500;
  color: #333;
}

.notification-content {
  font-size: 13px;
  color: #666;
}

/* Empty State */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 48px 16px;
}

.empty-state image {
  width: 120px;
  height: 120px;
  margin-bottom: 16px;
  opacity: 0.6;
}

.empty-state text {
  font-size: 14px;
  color: #999;
}

/* Action Button */
.action-button {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 16px;
  height: 40px;
  border-radius: 20px;
  background-color: #f5f5f5;
}

.action-button text {
  font-size: 14px;
  color: #666;
}

